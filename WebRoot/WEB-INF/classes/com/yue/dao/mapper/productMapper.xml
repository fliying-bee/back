<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC   
    "-//mybatis.org//DTD Mapper 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
 <mapper namespace="com.yue.dao.ProductDao">
    <!-- 分页查询所有商品 -->
    <select id="queryProductPageByType" resultType="com.yue.model.Product" parameterType="String">
        select *
        from BEProduct
        where proType = #{proType}
    </select>
    
    <!-- 根据ID查商品 -->
    <select id="queryProductById" resultType="com.yue.model.Product" parameterType="String">
        select * 
        from BEProduct 
        where proId = #{proId}
    </select>
    <!-- 插入 -->
    <insert id="insertProduct" parameterType="com.yue.model.Product">
        insert into BEProduct(proName,proBuyPrice,proCount,proDesc,proSalePrice,proSellPrice,proPicPath,proType) 
               values(#{proName},#{proBuyPrice},#{proCount},#{proDesc},#{proSalePrice},#{proSellPrice},#{proPicPath},#{proType})
    </insert>
    <!-- 更新 -->
    <update id="updateProduct" parameterType="Product">
        update BEProduct 
        set proName=#{proName},proBuyPrice=#{proBuyPrice},proCount=#{proCount},
        proDesc=#{proDesc},proSalePrice=#{proSalePrice},proSellPrice=#{proSellPrice},
        proPicPath=#{proPicPath},proType=#{proType}
        where proId=#{proId}
    </update>
 </mapper>